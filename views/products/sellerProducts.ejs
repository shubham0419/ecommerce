<% layout('layouts/boilerplate') -%>


<section class="container">
  <h1 class="display-6">My Products</h1>
    <div class="seller-card row">   
      <div class="col-lg-8"> 
    <% for(let item of allProducts){ %>
          <div class="card mx-auto mb-3" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-4">
                  <img src="<%=item.img%>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-8 card-cancel">
                  <div class="card-body">
                    <h5 class="card-title"><%=item.name%></h5>
                    <p class="card-text"><%=item.desc%></p>
                    <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                </div>
                <div class="col-4 editdelte">
                  <a href="/products/<%=item._id%>/edit" class="btn btn-info btn-sm">Edit</a>
                  <form class="d-inline-block" action="/products/<%=item._id%>?_method=DELETE" method="POST">
                      <button class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div> 
        <%} %>
    </div> 
    </div>
</section>
